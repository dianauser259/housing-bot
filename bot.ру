import asyncio
from telegram import Bot
from playwright.async_api import async_playwright
import hashlib

TOKEN = "8042937179:AAE9QPM8AtHkJhhBmiSjeroHZMIh2nnQO3w"
CHAT_ID = "–¢–í–û–ô_CHAT_ID"  # —Å—é–¥–∞ –ø–æ–¥—Å—Ç–∞–≤–∏—à—å —Å–≤–æ–π chat_id –ø–æ—Å–ª–µ –ø–µ—Ä–≤–æ–≥–æ –∑–∞–ø—É—Å–∫–∞
URL = "https://www.saga.hamburg/immobiliensuche?Kategorie=APARTMENT"

known_ads = set()

async def fetch_new_ads():
    async with async_playwright() as p:
        browser = await p.chromium.launch()
        page = await browser.new_page()
        await page.goto(URL)
        await page.wait_for_timeout(3000)
        content = await page.content()
        await browser.close()
        return content

def extract_ads(content):
    from bs4 import BeautifulSoup
    soup = BeautifulSoup(content, "html.parser")
    ads = []
    for item in soup.find_all("a", class_="teaser__link"):
        title = item.get_text(strip=True)
        href = item["href"]
        link = f"https://www.saga.hamburg{href}"
        ad_id = hashlib.md5(link.encode()).hexdigest()
        ads.append((ad_id, title, link))
    return ads

async def notify_new_ads(bot, ads):
    global known_ads
    new_ads = [ad for ad in ads if ad[0] not in known_ads]
    for ad_id, title, link in new_ads:
        msg = f"üè† *–ù–æ–≤–æ–µ –æ–±—ä—è–≤–ª–µ–Ω–∏–µ:*\n{title}\n{link}"
        await bot.send_message(chat_id=CHAT_ID, text=msg, parse_mode="Markdown")
        known_ads.add(ad_id)

async def main_loop():
    bot = Bot(token=TOKEN)
    while True:
        try:
            html = await fetch_new_ads()
            ads = extract_ads(html)
            await notify_new_ads(bot, ads)
        except Exception as e:
            print(f"–û—à–∏–±–∫–∞: {e}")
        await asyncio.sleep(30)

if __name__ == "__main__":
    asyncio.run(main_loop())
